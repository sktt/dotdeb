function pub_ip {
  dig -4 TXT +short o-o.myaddr.l.google.com @ns1.google.com | sed 's/"//g'
}

function gcco {
  gcc ${@:2} -o ${1/.c/} $1
}

function hex () {
  echo -n 0x
  echo "obase=16; $1" | bc
}

function _latest () {
  echo "$1/$(ls -t $1 | head -n1)"
}

