function hex2dec() {
  python3 -c "print(int('$1', 16))"
}

function hex2bin() {
  python3 -c "print(bin(int('$1', 16)))"
}

function bin2hex() {
  python3 -c "print(hex(int('$1', 2)))"
}

function bin2dec() {
  python3 -c "print(int('$1', 2))"
}

function dec2hex() {
  python3 -c "print('0x{:02x}'.format($1))"
}

function dec2bin() {
  python3 -c "print(bin($1))"
}
